@model quiz.Models.TBL_STUDENT

@{
    Layout = null;
}
<style>
    body {
        background-image: url("../../Content/img/sregister.jpg");
        background-size: cover;
    }
</style>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>sregister</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <link href="~/Content/bootstrap.css" rel="stylesheet" />

</head>
<body>
    <h2 style="text-align:center; background-color:antiquewhite">Student Registration</h2>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-8">



                <div class="container" style="width:40%">
                    <br />
                    <br />
                    <br />
                    <br />

                    @using (@Html.BeginForm())
                    {


                        <div class="form-group">
                            <label for="email" style="color:white">Email:</label>
                            @* <input type="email" class="form-control" id="email" placeholder="Enter email" name="email">*@
                            @Html.TextBoxFor(x => x.S_NAME, htmlAttributes: new { @class = "form-control" })

                        </div>
                        <div class="form-group">
                            <label for="pwd" style=" color:white">Password:</label>
                            @Html.PasswordFor(x => x.S_NAME, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="pwd" style="color:white">Image:</label>
                            <input type="file" class="form-control btn btn-info" id="imgfile" name=" imgfile" />
                        </div>

                        <input type="submit" value="Register Now!" class="btn btn-success btn-block" />

                    }
                </div>
            </div>

            <div class="col-lg-4 col-md-4 col-sm-4">

            </div>




        </div>


    </div>





</body>
</html>
