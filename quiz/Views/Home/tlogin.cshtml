@model quiz.Models.TBL_ADMIN

@{
    ViewBag.Title = "Admin Login";
}


<head>
    <style>
        body {
            background-image: url("../../Content/img/Teach.jpg");
            //background-size: cover;
            background-repeat: no-repeat;
            background-size: 1580px 750px;
           
        }
    </style>
</head>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 style="color:white">Login as Admin</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group"style="color:white">
            @Html.LabelFor(model => model.AD_NAME, "Name :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AD_NAME, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AD_NAME, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group"style="color:white">
            @Html.LabelFor(model => model.AD_PASSWORD, "Password :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.AD_PASSWORD, new { @class = "form-control" } )
                @Html.ValidationMessageFor(model => model.AD_PASSWORD, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </div>
    </div>
}


<p style="color:red">@ViewBag.msg</p>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
